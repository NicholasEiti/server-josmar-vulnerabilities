
RewriteEngine On
ErrorDocument 404 /error/error404.php
ErrorDocument 403 /error/error403.php

DirectoryIndex login.php

RewriteRule ^drawers/$                  /drawers/list.php [QSA]
RewriteRule ^drawers/([0-9]+)/edit$     /drawers/edit.php?id=$1 [QSA]
RewriteRule ^drawers/([0-9]+)/delete$   /drawers/delete.php?id=$1 [QSA]

RewriteRule ^keys/$         /keys/list.php [QSA]

RewriteRule ^requests/$     /requests/list.php [QSA]

RewriteRule ^users/$        /users/list.php [QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]
